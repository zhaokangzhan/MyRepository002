<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
	<!-- 建立类与表关系映射 -->
	<class name="domain.Authority" table="authority" >
		<!-- 建立类中的属性与表中的主键对应 -->
		<id name="id" column="author_Id">
			<generator class="native"></generator>
		</id>
		<!-- 建立类中的普通的属性和表的字段的对应 -->
		
		<property name="uuid" column="author_uuid"  />
		<property name="role" column="author_role" />
		<property name="right" column="author_right" />
		<property name="active" column="author_active" />
		

	</class>

</hibernate-mapping>