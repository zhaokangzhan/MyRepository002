<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
	<!-- 建立类与表关系映射 -->
	<class name="domain.Teacher" table="teacher" >
		<!-- 建立类中的属性与表中的主键对应 -->
		<id name="id" column="Id">
			<generator class="native"></generator>
		</id>
		<!-- 建立类中的普通的属性和表的字段的对应 -->
		
		<property name="teacher_uuid" column="teacher_uuid"  />
		<property name="teacher_id" column="teacher_id" />
		<property name="teacher_name" column="teacher_name" />
		<property name="teacher_idcard" column="teacher_idcard" />
		<property name="teacher_active" column="teacher_active" />

	</class>

</hibernate-mapping>